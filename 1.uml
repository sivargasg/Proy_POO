classDiagram
    class Libro {
        +int id
        +str título
        +str autor
        +str género
        +int añoPublicación
        +bool Disponible()
    }

    class Préstamo {
        +int id
        +Libro libro
        +Miembro miembro
        +datetime fechaPréstamo
        +datetime fechaDevolución
        +iniciarPréstamo()
        +finalizarPréstamo()
    }

    class Miembro {
        +int númMembresía
        +str dirección
        +str teléfono
        +str correoElectrónico
        +actualizarInformación()
    }
    
    class Persona {
        +str nombre
        +int cédula
    }

    class Biblioteca {
        +str nombre
        +str dirección
        +list libros
        +list miembros
        +list préstamos
        +agregarLibro(Libro libro)
        +eliminarLibro(int id)
        +actualizarLibro(Libro libro)
        +registrarMiembro(Miembro miembro)
        +eliminarMiembro(int númMembresía)
        +actualizarMiembro(Miembro miembro)
    }

    class Multa {
        +int id
        +Miembro miembro
        +float monto
        +bool pagada
        +generarMulta()
        +pagarMulta()
    }

    class HistorialPréstamos {
        +list historial
        +agregarPréstamo(Préstamo préstamo)
        +consultarHistorial(Miembro miembro)
    }

    Biblioteca "1" --> "0..*" Multa : genera
    Persona <-- Miembro
    Biblioteca "1" *-- "0..*" Libro : administra
    Biblioteca "1" *-- "0..*" Miembro : registra
    Biblioteca "1" *-- "0..*" Préstamo : gestiona
    Libro "1" *-- "0..*" Préstamo : tiene
    Miembro "1" --o "0..*" Préstamo : realiza
    Préstamo --> Libro : 1
    Préstamo --> Miembro : 1
    Biblioteca *-- HistorialPréstamos : gestiona
